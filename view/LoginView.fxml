<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Body Fat Calculator">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Silakan Login untuk melanjutkan" textFill="#757575" />
        
        <TextField fx:id="txtUsername" promptText="Username" />
        <PasswordField fx:id="txtPassword" promptText="Password" />
        
        <Button mnemonicParsing="false" onAction="#handleLogin" prefWidth="200.0" text="LOGIN" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        
        <Button mnemonicParsing="false" onAction="#handleGoToRegister" style="-fx-background-color: transparent; -fx-text-fill: #2196F3;" text="Belum punya akun? Daftar disini" underline="true" />
    </children>
</VBox>