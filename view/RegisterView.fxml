<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Registrasi Akun">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Buat akun baru" textFill="#757575" />
        
        <TextField fx:id="txtUsername" promptText="Username" />
        <TextField fx:id="txtEmail" promptText="Email" />
        <PasswordField fx:id="txtPassword" promptText="Password (Min. 6 Karakter)" />
        
        <Button mnemonicParsing="false" onAction="#handleRegister" prefWidth="200.0" text="DAFTAR SEKARANG" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        
        <Button mnemonicParsing="false" onAction="#handleBackToLogin" text="Batal / Kembali ke Login" />
    </children>
</VBox>